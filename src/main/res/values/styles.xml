<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>

        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="android:textViewStyle">@style/Text</item>
        <item name="cardViewStyle">@style/MyCardView</item>
        <item  name="tabSelectedTextColor">@color/primaryColor</item>
        <item name="tabTextColor">@color/secondaryTextColor</item>
    </style>

    <style name="MyCardView" parent="CardView">
        <item name="cardBackgroundColor">@color/secondaryColor</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:switchTextOn">@color/primaryTextColor</item>
        <item name="android:switchTextOff">@color/secondaryTextColor</item>
        <item name="cardCornerRadius">0dp</item>
    </style>

    <style name="Text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
    </style>
</resources>
